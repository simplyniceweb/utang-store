<div class="modal fade" id="addUserModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Credit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form class="form-inline" method="POST" action="{{ path('add-user') }}">
            <div class="row">
                <div class="col-md-12">
                    <input type="text" name="firstname" class="form-control" placeholder="Firstname" required="required">
                </div>
                <div class="col-md-12 mt-3">
                    <input type="text" name="lastname" class="form-control" placeholder="Lastname">
                </div>
                <div class="col-md-12 mt-3">
                    <input type="text" name="description" class="form-control" placeholder="Description">
                </div>
                
                <div class="col-md-12 mt-3">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</div>
</div>
</div>